"basic vimrc for editing files as sudo
syntax on
set number

set noswapfile
set nobackup

set belloff=all
set backspace=indent,eol,start
set backspace=2
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent
set ignorecase
set incsearch
set shellcmdflag=-ic
set autochdir

set splitbelow
set splitright

let &t_SI = "\e[5 q"
let &t_EI = "\e[2 q"
set cursorline
set mouse=a

inoremap jk <ESC>
vnoremap jk <ESC>
map gh :w <cr>
map fj :wq <cr>

map <F2> :term <cr>
map <F3> :vert :term <cr>
nnoremap <F12> :qa! <cr>
